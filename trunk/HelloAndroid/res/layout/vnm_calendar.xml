<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android" 
	a:orientation="vertical"
	a:layout_width="fill_parent"
	a:layout_height="fill_parent">
	<ViewFlipper a:id="@+id/viewFlipper"
        a:layout_width="fill_parent"
        a:layout_height="fill_parent"
        a:layout_weight="2"> 
		<ViewSwitcher a:id="@+id/daySwitcher"
	    	a:layout_width="fill_parent"
	        a:layout_height="fill_parent"/>
	    <!-- 
	    <chau.nguyen.calendar.ui.VNMMonthViewer 
	    	a:layout_width="fill_parent"
			a:layout_height="fill_parent"/>
		 -->
		<ViewSwitcher a:id="@+id/monthSwitcher"
    		a:layout_width="fill_parent"
        	a:layout_height="fill_parent"/>
	    
	</ViewFlipper>
    <LinearLayout
		a:orientation="horizontal"
		a:layout_height="wrap_content" 
		a:layout_width="fill_parent">
	
		<ImageButton a:id="@+id/monthDaySwitcherButton"
			a:layout_height="wrap_content"
			a:layout_width="wrap_content"
			a:src="@drawable/month"
			/>
	</LinearLayout>
</LinearLayout>