<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<TextView android:id="@+id/dayOfMonthText"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="29" 
		android:gravity="center"
		android:textSize="150sp"/>
	<TextView android:id="@+id/dayOfWeekText" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Thứ ba" 
		android:gravity="center_horizontal"		
		android:textSize="30sp"/>
	<TextView android:id="@+id/noteText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Ngày làm việc"
				android:gravity="center_horizontal" android:textSize="20sp"/>
</LinearLayout>